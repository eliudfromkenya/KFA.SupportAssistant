@using KFA.SupportAssistant.RCL.Models
@using KFA.SupportAssistant.RCL.State.MainTitle
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject IDispatcher dispatcher
@inject IState<MainTitleState> mainTitleState
@inject IUserService userService
@inject IState<GeneralMenusState> state

<div class="page">
    <div class="sidebar bg-lighterBlue-two" style="background-image:none;">
        <AuthorizeView>
            <Authorized>
                <NavMenu />
            </Authorized>
        </AuthorizeView>
    </div>

    <main>
        <div class="top-0 w-full align-items-end ">
            <div class="top-0 px-0 w-full mr-1">
                <AuthorizeView>
                    <Authorized>
                        <div class="flex flex-col w-full">
                            <div class="flex flex-row w-full">
                                @if (state.Value.Error != null)
                                {
                                    <div class="flex flex-col w-full">
                                        <div class="text-red-one underline text-xl">
                                            Error
                                        </div>
                                        <div class="text-red-two text-xl">
                                            Unable to load menu;  @state.Value.Error.Message
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in state.Value.Menus)
                                    {
                                        <div class="nav-item px-1">
                                            <div class="bg-lighterBlue-one flex flex-col items-center justify-center btn-animate min-h-20 min-w-24 border-3 rounded-[10px] m-1">
                                                <div class="max-h-[24px] mx-auto mt-1 mb-3 max-w-[24px]">
                                                    @item.IconFragment
                                                </div>
                                                
                                                <label class="menu-label w-full text-center mx-1">@item.Text</label>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="flex flex-row w-full">
                                <span class="main-title">@mainTitleState.Value.MainTitle</span>
                                <a href="/log-out" class="col-3 mt-4 ml-auto mr-1">Log Out</a>
                            </div>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="col-3 mt-4 mr-3 ml-auto">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

